<h1>Updating a Song</h1>
<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
    <%= f.label :title %>
    <%= f.text_field :title %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <%= f.label :genre %>
    <%= f.text_field :genre %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
    <%= f.label :released %>
    <%= f.check_box :released %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
    <%= f.label :release_year %>
    <%= f.number_field :release_year, minimum: 1, maximum: Time.now.year %>
  </div>

  <%= f.submit %>
<% end %>
